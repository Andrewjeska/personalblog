        </div>
      </div>

      <div class="hero-image-container">
        <picture style="border-radius:50%;">
          <source srcset="/assets/home-illustration.webp" media="(min-width: 600px)">
          <img class="hero-image" alt="Photo of Michael doing Yoga" src="/assets/home-illustration.webp" width="550" height="466">
        </picture>
      </div>
    </div>
    <div class="blog-container-home">
      {allPosts.map((post, index) => {
        const href = `/blog/${post.file.split('/').pop().split('.').shift()}`;
        return (
          <div>
            { index !== 0 && <hr /> }
            <div class="post-item">
              <h2>
                <a href={href}>{post.frontmatter.title}</a>
              </h2>
              <p>{post.frontmatter.description}</p>
              <div class="post-item-footer">
                <span class="post-item-date">â€” {post.frontmatter.publishDate}</span>
              </div>
            </div>
          </div>
        )
      })}
    </div>
  </div>
</BaseLayout>

<style>
  .social-links {
    display: flex;
    height: 3rem;
    gap: .75rem
  }

  .social-links a {
    display: flex;
    align-items: center;
  }

  .social-links svg {
    width: 2rem;
    height: 2rem;
    fill: currentColor; /* This will make it inherit the text color */
  }

  .home-container {
    display: flex;
    flex-direction: column;
   
  }

  .home-hero {
    align-items: center;
    /* justify-content: center; */
    display: flex;
    flex: 1;
    margin: 2em 0 1em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 200px;
    border-radius: 50%;

  }

  .caption {
    font-size: .8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 400px;
    margin-bottom: 1em;
    border-radius: 50%; /* Add this line to make the image circular */
    object-fit: cover; /* Add this to ensure the image fills the circular shape */
    aspect-ratio: 1 / 1; /* Add this to maintain a perfect circle */
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .hero-image-container {
      display: none;
    }

    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: left;
      min-width: 100%;
    }
  }
</style>
